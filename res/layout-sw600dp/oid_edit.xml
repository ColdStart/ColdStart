<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/OID"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="12dp"
        android:paddingRight="6dp"
        android:paddingTop="24dp"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="20dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/OIDDescription"
            android:maxLines="4"
            android:layout_weight="6"
            android:layout_alignBottom="@+id/submitDescriptionButton"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/submitDescriptionButton"
            android:layout_marginLeft="12dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editOIDButton"
            android:id="@+id/submitDescriptionButton"
            style="@style/ButtonText"
            android:background="@drawable/dark_blue_button"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:minWidth="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>
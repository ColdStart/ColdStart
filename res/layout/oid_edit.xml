<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/OID"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="18dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/OIDDescription"
        android:layout_below="@+id/OID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="8dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editOIDButton"
        android:id="@+id/submitDescriptionButton"
        android:layout_below="@+id/OIDDescription"
        android:layout_alignRight="@+id/OIDDescription"
        style="@style/ButtonText"
        android:background="@drawable/light_blue_button"
        android:layout_marginTop="8dp"/>

</RelativeLayout>